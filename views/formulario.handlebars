<main>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <form action="/cadastrar" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <input type="text" class="form-control" placeholder="Nome do produto" name="nome" required aria-label="Nome do produto">
          </div>
          <div class="mb-3">
            <input type="number" step="0.01" class="form-control" placeholder="Valor do produto" name="valor" required aria-label="Valor do produto">
          </div>
          <div class="mb-3">
            <input type="file" class="form-control" name="imagem" aria-label="Imagem do produto">
          </div>
          <div class="mb-3">
            <input type="submit" class="btn btn-primary" value="Cadastrar">
            </div>
        </form>
    </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      {{#each produtos}}
<div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card">
          <img src="../imagens/{{imagem}}">
          <div class="textos">
          <p>{{nome}}</p>
          <p>R$ {{valor}}</p>
          </div>
          <div class="btn">
          <a href="/formEdit/{{codigo}}" class="btn btn-warning">Alterar</a>
          <a href="/remover/{{codigo}}/{{imagem}}" class="btn btn-danger">Remover</a>
          </div>
        </div>
      </div>

      {{/each}}
    </div> 

  </div>
</main>